for lang in fr it es de en pt; do \
    LOCALE_ID=$lang production=true node_modules/.bin/ts-node compile-environment.ts && \
    node_modules/.bin/ng build --output-path=dist/v3/$lang \
             --prod \
             --bh /v3/$lang/ \
             --locale=$lang \
             --i18nFile=src/locale/messages.$lang.xlf \
             --i18nFormat=xlf
  done